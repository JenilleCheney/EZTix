@model IEnumerable<EZTix.Models.Show>

@{
    ViewData["Title"] = "Current Shows";
}

<h1> Current Shows</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.FileName))
                    {
                        <img src="~/images/@item.FileName" alt="@item.Title" style="width:100px; height:100px; "  />
                    }
                    else
                    {
                        <img src="~/images/placeholder.jpg" alt="No image available" style="width:100px; height:100px; " />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-nowrap">
                    @item.ShowTime.ToString("MMMM d yyyy h:mm tt")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>
                <td class="text-nowrap">
                    @item.Created.ToString("MMMM d yyyy h:mm tt")
                </td>
                <td>
                    @(item.Category?.CategoryName ?? "—")
                </td>
                <td>
                    @(item.Venue?.VenueName ?? "—")
                </td>
                <td class="text-end text-nowrap">
                    <a class="me-2" asp-action="Edit" asp-route-id="@item.ShowID">Edit</a>
                    <span class="text-muted">|</span>
                    <a class="mx-2" asp-action="Details" asp-route-id="@item.ShowID">Details</a>
                    <span class="text-muted">|</span>
                    <a class="ms-2" asp-action="Delete" asp-route-id="@item.ShowID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
